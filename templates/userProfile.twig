<article class="d-flex flex-column gap-2">
	<section class="d-flex gap-2">
		<div class="bg-lighted p-2 rounded w-100">
			<div class="d-flex gap-3">
				<div>
					<img src="https://w.wallhaven.cc/full/2y/wallhaven-2yx5og.jpg" alt="avatar" class="rounded-circle avatar" width="128" height="128">
				</div>
				<div class="w-100">
					<h2>{{user.name}}</h2>
					<p>{{user.description}}</p>
					<div>
						<div class="d-inline border-end border-standard border-3 pe-2 me-2">50 followers</div>
						<div class="d-inline">50 following</div>
					</div>
					{% if isMyProfile %}
						<div class="float-end">
							<button class="btn btn-primary">Edit</button>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
		<div class="bg-lighted rounded w-100">
			<ul class="d-flex">
				<li>
					<button class="btn btn-outline-primary p-2 border-end-0 border-bottom-0 rounded-end-0 rounded-bottom-0">About</button>
				</li>
				<li>
					<button class="btn btn-outline-primary border-0 rounded-0 p-2">Books</button>
				</li>
				<li>
					<button class="btn btn-outline-primary border-0 rounded-0 p-2">Settings</button>
				</li>
				<li>
					<button class="btn btn-outline-primary border-0 rounded-0 p-2">Payment</button>
				</li>
				<li>
					<button class="btn btn-outline-primary border-0 rounded-0 p-2">History</button>
				</li>
			</ul>
			<div class="px-2 pb-2">
				<h3>Information</h3>
				<div class="d-flex">
					<div class="w-100 d-flex flex-column">
						<div class="row">
							<div class="col d-flex align-items-center">{{ createdAtSVG }}
								Created at</div>
							<div class="col">28.05.2024</div>
						</div>
						<div class="row">
							<div class="col d-flex align-items-center">{{wroteSVG}}
								Wrote</div>
							<div class="col">{{user.books|length}}
								book</div>
						</div>
					</div>
					<div class="w-100 d-flex flex-column">
						<div class="row">
							<div class="col d-flex align-items-center">{{roleSVG}}
								Role</div>
							<div class="col">Owner</div>
						</div>
						<div class="row">
							<div class="col d-flex align-items-center">{{reputationSVG}}
								Reputation</div>
							<div class="col text-success">54</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section>
		<div class="bg-lighted p-2 rounded w-100">
			<h3>Books information</h3>
			<div class="customTable">
			     <div class="customTableHeading">
			     	  <div class="tr">
				       <div>
				         #
				       </div>
				       <div>
				         Name of the book
				       </div>
				       <div>
				         Rating
				       </div>
				       <div>
				         Readers
				       </div>
				       <div>
				         Last edit
				       </div>
				       <div>
				         Status
				       </div>
				  </div>
			     </div>
			     <div class="customTableBody">
			     {% for key, book in user.books %}
			       {{key}} {{book.name}}
			     {% endfor %}
			     </div>
			</div>
		</div>
	</section>
</article>
